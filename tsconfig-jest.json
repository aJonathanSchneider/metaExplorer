{
  "compilerOptions": {    
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "strict": false,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "sourceRoot": "src",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node", ""],
    "typeRoots": ["./node_modules/@types"],
    "suppressExcessPropertyErrors": true,
    "declaration": true,
    "strictNullChecks": false,
    "skipLibCheck": false,
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "exclude": [
    "doc",
    "node_modules",
    "src/examples",
    "dist"
  ],
  "awesomeTypescriptLoaderOptions": {
    "compilerOptions": {
      "declaration": false
    },
    "exclude": [
      "node_modules",
      "public/js"
    ]
  }
}