{
  "include": [
    "src"
  ],
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["node", "dom-mediacapture-record"],
    "typeRoots": ["../node_modules/@types"],
    "outDir": "lib",
    "rootDir": "src",
    "declarationDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "sourceMap": true,
    "module": "esnext",
    "emitDeclarationOnly": false,
    "resolveJsonModule": true,
    "lib": ["dom", "esnext"],
    "paths": {
      "*": [
        "*"
      ]
    }
  }
}
