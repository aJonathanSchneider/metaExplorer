{
  "exclude": ["node_modules", "dist", "lib", "__tests__", "**/*.test*", "**/*.spec*"],
  "files":  ["./typings.d.ts"],
  "compilerOptions": {
    "skipLibCheck": true,
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "rootDir": ".",
    "outDir": "lib",
    "downlevelIteration": true,
    "strict": false,
    "removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "@metaexplorer/*": ["packages/*/src"],
      "@metaexplorer-mods/*": ["mods/*/src"]
    },
    // https://github.com/RyanCavanaugh/learn-a/#tsconfigsettingsjson
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "references": [
    { "path": "packages/core" },
    { "path": "mods/material-design" },
    { "path": "mods/keycloak"},
    { "path": "mods/demo"},
    { "path": "mods/google"},
    { "path": "mods/mailchimp"},
    { "path": "mods/useritpt"},
    { "path": "mods/itpt-editor"},
    { "path": "mods/qr-code-genscan"},
    { "path": "mods/onboarding"},
    { "path": "mods/metaexplorer.io" }
  ]
}